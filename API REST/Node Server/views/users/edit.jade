extends ../layout

block content
    h1.
        User ID #{user._id}
    form(action='/users/#{user._id}/edit',method='post',name='updateuser',enctype='application/x-www-form-urlencoded')
        p Username: 
            input#inputUsername(type='text', value='#{user.username}', name='username')
        p Phone Number: 
            input#inputPhoneNumber(type='number', value='#{user.phoneNumber}', name='phoneNumber')
        p Password: 
            input#inputPassword(type='text', value='#{user.password}', name='password')
        p Timestamp: 
            input#inputTimestamp(type='date', name='timestamp', value='#{user.timestamp}')
        p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit').
                Update